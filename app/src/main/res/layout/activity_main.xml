    <EditText
        android:id="@+id/translate_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/translate_input_default"/>

    <TextView
        android:id="@+id/translate_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/translate_output_default"/>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/menu_translate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_blue"
        materialdesign:iconDrawable="@drawable/ic_arrow_forward_white_24dp" />

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/menu_recording_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_blue"
        materialdesign:iconDrawable="@drawable/ic_play_arrow_white_36dp" />

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/menu_correct_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_orange"
        materialdesign:iconDrawable="@drawable/ic_play_arrow_white_36dp" />


    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/menu_record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_blue"
        materialdesign:iconDrawable="@drawable/ic_mic_white_36dp" />

</LinearLayout>